## HTTP
"{{item}}:80":
    listen: 80
    paths:
        "/":
            mruby.handler: |
                Proc.new do |env|
                    if env['SERVER_PORT'] == "80"
                        query_string = (env['QUERY_STRING'].empty?) ? "" : "?#{env['QUERY_STRING']}"
                        [301, {"Location" => "https://#{env['HTTP_HOST']}#{env['PATH_INFO']}#{query_string}"}, []]
                    else
                        [399, {}, []]
                    end
                end


